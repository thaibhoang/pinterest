<%= turbo_frame_tag "board-infor" do %>
  <h1>Editing board</h1>
  <%= render "shared/flash" %>

  <%= form_with(model: [current_user, @board]) do |form| %>
    <%= render partial: "shared/errors_notification", locals: { resource: @board } %>
    
    <div class="form-group">
      <%= form.label :cover, "Upload Cover" %>
      <%= form.file_field :cover %>
    </div>

    <div class="form-group">
      <%= form.label :cover_url, "Cover URL (recommended over uploaded cover)" %>
      <%= form.text_field :cover_url %>
    </div>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="form-group">
      <%= form.label :keep_secret %>
      <%= form.check_box :keep_secret %>
    </div>

    <div>
      <%= form.submit  %>
    </div>
  <% end %>
  <%= link_to "Cancel", user_board_path(current_user, @board), class: "button" %>
<% end %>
<br>

