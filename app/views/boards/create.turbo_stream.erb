<%= turbo_stream.replace "board_id" do %>
  <% open_boards, closed_boards = filter_options(@pin, current_user, current_user.boards) %>
  
  <%= render partial: "pins/select_tag",
             locals: { open_boards: open_boards, 
                       closed_boards: closed_boards, 
                       new_board_id: @board.id, 
                       new_board_name: @board.name } %>
<% end %>

<%= turbo_stream.replace "new_board" do %>
  <%= turbo_frame_tag "new_board" %>
<% end %>

<%= turbo_stream.replace "all-boards" do %>
  <%= render partial: "shared/all_boards", locals: {boards: @user.boards, user: @user} %>
<% end %>
