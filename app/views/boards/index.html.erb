<p style="color: green"><%= notice %></p>

<h1>Boards</h1>

<div id="boards">
  <% @boards.each do |board| %>
    <%= render board %>
    <p>
      <%= link_to "Show this board", user_board_path(current_user,board) %>
    </p>
  <% end %>
</div>

<%= link_to "New board", new_user_board_path(current_user) %>
