<div class="middle-container">
  <div>
    <h1>Editing pin</h1>

    <%= turbo_frame_tag [dom_id(@pin), "edit_layout"] do %>
      <% unless @cancel_form %>
        <% if @in_frame_mode %>
          <div class="modal z-15" data-controller="close-form" data-close-form-target="container" >
            <div class="modal-content z-20">
              <%= render partial: "pins/edit_form", locals: {pin: @pin, in_frame_mode: @in_frame_mode} %>
            </div>
          </div>
        <% else %>
          <%= render partial: "pins/edit_form", locals: {pin: @pin, in_frame_mode: @in_frame_mode} %>
        <% end %>
      <% end %>
    <% end %>  

    <br>  
    <div>
      <%= link_to "Show this pin", @pin %> |
      <%= link_to "Back to pins", pins_path %>
    </div>
  </div>
</div>
