<%= form_with(model: pin) do |form| %>
  <% if pin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
        <% pin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :image, "Upload Image",  style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :link, style: "display: block" %>
    <%= form.text_area :link %>
  </div>

  <div>
    
    <% if in_frame_mode %>
      <%= form.submit %>
      <%= link_to "Cancel", edit_pin_path(pin, cancel_form: true), data: {close_form_target: "button"} %>
    <% else %>
      <%= form.submit "Submit", data: {turbo: "false"} %>
    <% end %>
  </div>
<% end %>
