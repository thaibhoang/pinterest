<div id="<%= dom_id pin %>">
  <p>
    <strong>Image:</strong>
    <%= link_to image_tag(pin.resize_img(pin.image, 750)), pin.image if pin.image.attached? %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= pin.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= pin.description %>
  </p>

  <p>
    <strong>Link:</strong>
    <%= pin.link %>
  </p>

  <% if pin.board.present? %>
    <p>
      <strong>Board:</strong>
      <%= link_to pin.board.name, user_board_path(pin.board.user, pin.board) %>
    </p>
  <% end %>

  <p>
    <strong>Creator:</strong>
    <%= link_to pin.user, user_path(pin.user) %>
  </p>

  <p>
    <strong>Creator:</strong>
    <%= link_to pin.user, user_path(pin.user) %>
  </p>
</div>
