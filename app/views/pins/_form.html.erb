<%= form_with(model: pin, class: "pin_form") do |form| %>
  <%= render partial: "shared/errors_notification", locals: { resource: pin } %>

  <div>
    <%= form.label :image, "Upload Image", style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.label :image_url, "Image URL: (prefered over uploaded Image)" , style: "display: block" %>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :link, style: "display: block" %>
    <%= form.text_area :link %>
  </div>

  <%= render partial: "shared/select_a_board", locals: {pin: pin} %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
