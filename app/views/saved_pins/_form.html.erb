<%= form_with(model: [pin, saved_pin]) do |form| %>
  <%= render partial: "shared/errors_notification", locals: { resource: saved_pin } %>

  <%= render partial: "shared/select_a_board", locals: {pin: pin} %>

  <div>
    <%= form.submit "Save on Board" %>
    <%= link_to "Cancel", new_pin_saved_pin_path(pin, cancel_form: true), data: {close_form_target: "button"} %>
  </div>
<% end %>
