<%= turbo_stream.update "edit#{dom_id(@saved_pin)}", "" %>

<%= turbo_stream.remove "box_#{dom_id(@pin)}" %>

<%# reload the board thumbnail %>
<% unless @saved_pin.board.nil? %>
  <%= turbo_stream.replace "#{ dom_id(@saved_pin.board) }" do %>
    <%= render partial: "saved/board_thumbnail", locals: {board: @saved_pin.board, user: @saved_pin.user} %>
  <% end %>
<% end %>

