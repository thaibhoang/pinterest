<% saved_pins = pin.saved_pins.select { |save_pin| save_pin.user_id == current_user.id } %>

<%= render partial: "shared/saved_pin_form_layout", locals: {pin: pin} if saved_pins.size == 0 %>
<%= render partial: "shared/unsave_layout", locals: {pin: pin, saved_pin: saved_pins.last} if saved_pins.size > 0 %>
