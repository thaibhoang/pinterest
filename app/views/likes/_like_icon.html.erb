<% like = liked_by_current_user(likeable) %>
<% if like.nil? %>
  <%= button_to likes_path, params: { like: { likeable_id: likeable.id, likeable_type: likeable.class.to_s } }, class: "like" do %>
    <i class="fa-regular fa-heart" style="color:#B197FC;"></i>
  <% end %>
<% else %>
  <%= button_to like_path(like), method: :delete, params: { like: { likeable_id: likeable.id, likeable_type: likeable.class.to_s } }, class: "like" do %>
    <i class="fa-solid fa-heart" style="color: #B197FC;"></i>
  <% end %>
<% end %>
